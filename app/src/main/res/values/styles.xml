<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
<!--        <item name="android:alertDialogTheme">@style/DialogThemeDarkOrange</item>-->
        <item name="materialAlertDialogTheme">@style/DialogThemeDarkOrange</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="snackbarStyle">@style/snackbar_style</item>
        <item name="snackbarButtonStyle">@style/snackbar_button</item>
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>

        <!-- Avoid white blinking/flash in transition -->
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

<!--    DialogTheme-->
    <style name="DialogThemeDarkOrange" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:buttonBarButtonStyle">@style/ButtonAlertDialog</item>
        <item name="android:buttonBarPositiveButtonStyle">@color/colorOrange</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonAlertDialog</item>




    </style>

    <style name="ButtonAlertDialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:colorControlActivated">@color/colorOrange</item>
        <item name="android:colorControlNormal">@color/colorOrange</item>
        <item name="android:colorControlHighlight">@color/colorOrange</item>
        <item name="materialThemeOverlay">@color/colorOrange</item>
        <item name="android:textColor">@color/colorOrange</item>

    </style>

    <style name="toolbarPrimary" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="materialThemeOverlay">@style/themeOverlaySnackbar</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="actionTextColorAlpha">1.0</item>

    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="themeOverlaySnackbar">
<!--        <item name="colorOnSurface">@color/colorPrimary</item>-->
    </style>

</resources>
