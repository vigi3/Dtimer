<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/activity_main"
    tools:context=".MainActivity"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="DTimer"
        app:titleTextColor="@color/colorOrange" />

    <TextView
        android:id="@+id/addProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:elevation="1dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="@color/colorOrange"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/circleButtonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_orange"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/circleButtonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_orange"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewTopLeft"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/project_box"
        android:elevation="3dp"
        android:textColor="@color/colorOrange"
        android:paddingStart="15dp"
        android:paddingEnd="30dp"
        android:paddingTop="7dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewTopRight"
        app:layout_constraintBottom_toTopOf="@+id/addProject"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="96dp"
        />

    <TextView
        android:id="@+id/textViewTopRight"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/project_box"
        android:elevation="3dp"
        android:textColor="@color/colorOrange"
        android:paddingStart="15dp"
        android:paddingEnd="30dp"
        android:paddingTop="4dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/textViewTopLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/addProject"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textViewBottomLeft"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/project_box"
        android:elevation="3dp"
        android:textColor="@color/colorOrange"
        android:paddingStart="15dp"
        android:paddingEnd="30dp"
        android:paddingTop="4dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewbottomRight"
        app:layout_constraintTop_toBottomOf="@+id/addProject"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="516dp" />

    <TextView
        android:id="@+id/textViewbottomRight"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/project_box"
        android:elevation="3dp"
        android:textColor="@color/colorOrange"
        android:paddingStart="15dp"
        android:paddingEnd="30dp"
        android:paddingTop="4dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/textViewBottomLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addProject"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="507dp" />


</androidx.constraintlayout.widget.ConstraintLayout>