<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/activity_main"
    tools:context=".MainActivity"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/toolbarPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="DTimer"
        app:titleTextColor="@color/colorOrange" />

    <TextView
        android:id="@+id/addProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:elevation="5dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="@color/colorOrange"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textViewTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/textViewMiddleTop"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="315"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="96dp"
        />

    <TextView
        android:id="@+id/textViewTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/textViewMiddleTop"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="45"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textViewMiddleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/addProject"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="0"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="507dp" />

    <TextView
        android:id="@+id/textViewMiddleLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/addProject"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="270"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="507dp" />

    <TextView
        android:id="@+id/textViewMiddleRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/addProject"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="90"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="507dp" />

    <TextView
        android:id="@+id/textViewMiddleBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/addProject"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="180"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="507dp" />

    <TextView
        android:id="@+id/textViewBottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/textViewMiddleBottom"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="225"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="516dp" />

    <TextView
        android:id="@+id/textViewbottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_project"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:scaleX="1"
        android:scaleY="1"
        android:textSize="15sp"
        app:layout_constraintCircle="@id/textViewMiddleBottom"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="135"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="507dp" />

</androidx.constraintlayout.widget.ConstraintLayout>